<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditUser">

    <TextView
        android:id="@+id/EditUserTextView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="#ff781f"
        android:padding="50dp"
        android:text="GonÃ§alo"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="47dp"
        android:layout_height="39dp"
        app:layout_constraintEnd_toEndOf="@+id/EditUserTextView"
        app:layout_constraintTop_toTopOf="@+id/EditUserTextView"
        app:srcCompat="@drawable/edit" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="47dp"
        android:layout_height="36dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="@+id/EditUserTextView"
        app:layout_constraintTop_toTopOf="@+id/EditUserTextView"
        app:srcCompat="@drawable/ic_action_name" />
</androidx.constraintlayout.widget.ConstraintLayout>